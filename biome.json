{
  "$schema": "https://biomejs.dev/schemas/1.7.1/schema.json",
  "files": {
    "ignore": ["public/**"]
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noForEach": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentWidth": 2,
    "indentStyle": "space",
    "lineEnding": "lf",
    "lineWidth": 150
  },
  "javascript": {
    "formatter": {
      "indentWidth": 4,
      "quoteStyle": "single",
      "indentStyle": "tab"
    }
  },
  "json": {
    "formatter": {
      "trailingCommas": "none"
    }
  }
}
